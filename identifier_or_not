#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main()
{
    printf("Name: Alisha Khatri\n");
    printf("Roll no: 03\n");
    printf("Lab no: 08\n");

    char identifier[50];
    int i = 1, flag = 1;

    printf("\nEnter an identifier: ");
    fgets(identifier, sizeof(identifier), stdin);
    identifier[strcspn(identifier, "\n")] = '\0'; // remove newline

    // Check first character
    if(!isalpha(identifier[0]) && identifier[0] != '_')
    {
        printf("\nIt is NOT a valid identifier.\n");
        return 0;
    }

    // Check remaining characters
    while(identifier[i] != '\0')
    {
        if(!isalnum(identifier[i]) && identifier[i] != '_')
        {
            flag = 0;
            break;
        }
        i++;
    }

    if(flag)
        printf("\nIt is a valid identifier.\n");
    else
        printf("\nIt is NOT a valid identifier.\n");

    return 0;
}

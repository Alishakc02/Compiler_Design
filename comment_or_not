#include <stdio.h>
#include <string.h>

int main()
{
    printf("Name: Alisha Khatri\n");
    printf("Roll no: 03\n");
    printf("Lab no: 03\n");

    char comment[100];
    int i, isComment = 0;

    printf("\nEnter a comment: ");
    fgets(comment, sizeof(comment), stdin);
    comment[strcspn(comment, "\n")] = '\0'; // remove newline

    int len = strlen(comment);

    if (len >= 2)
    {
        if (comment[0] == '/' && comment[1] == '/') // single-line comment
        {
            printf("\nIt is a comment (single-line).\n");
            isComment = 1;
        }
        else if (comment[0] == '/' && comment[1] == '*') // multi-line comment
        {
            for (i = 2; i < len - 1; i++)
            {
                if (comment[i] == '*' && comment[i + 1] == '/')
                {
                    printf("\nIt is a comment (multi-line).\n");
                    isComment = 1;
                    break;
                }
            }
            if (!isComment)
                printf("\nIt is not a valid multi-line comment.\n");
        }
        else
        {
            printf("\nIt is not a comment.\n");
        }
    }
    else
    {
        printf("\nIt is not a comment.\n");
    }

    return 0;
}

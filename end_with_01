#include <stdio.h>

enum states { q0, q1, qf };

enum states delta(enum states, char);

int main()
{
    printf("Name: Alisha Khatri\n");
    printf("Roll no: 03\n");
    printf("Lab no: 03\n");

    char input[20];
    enum states curr_state = q0;
    int i = 0;

    printf("\nEnter a binary string:\t");
    fgets(input, sizeof(input), stdin);

    /* remove newline character */
    for (i = 0; input[i] != '\0'; i++)
    {
        if (input[i] == '\n')
        {
            input[i] = '\0';
            break;
        }
    }

    i = 0;
    while (input[i] != '\0')
    {
        curr_state = delta(curr_state, input[i]);
        i++;
    }

    if (curr_state == qf)
        printf("\nThe string %s is accepted.", input);
    else
        printf("\nThe string %s is not accepted.", input);

    return 0;
}

/* Transition Function */
enum states delta(enum states s, char ch)
{
    switch (s)
    {
        case q0:
            if (ch == '0')
                return q1;
            else
                return q0;

        case q1:
            if (ch == '1')
                return qf;
            else
                return q1;

        case qf:
            if (ch == '0')
                return q1;
            else
                return q0;

        default:
            return q0;
    }
}
